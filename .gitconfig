[user]
	name = Luke Askew

[include]
  path = .gitconfig-work

[includeif "gitdir:~/Development/oss/"]
  path = .gitconfig-oss

[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX
  show = diff-so-fancy | less --tabs=4 -RFX

[push]
  default = current
  followTags = true

[fetch]
  prune = true

[help]
  autocorrect = 1

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true

[alias]
  l = log --graph --date=short
